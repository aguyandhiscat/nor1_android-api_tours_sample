<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/address_label"
        style="@style/AppTheme.SearchLabel"
        android:layout_alignParentTop="true"
        android:text="Address" />
    <TextView
        android:id="@+id/latitude_label"
        style="@style/AppTheme.SearchLabel"
        android:layout_below="@id/address_label"
        android:text="Latitude" />
    <TextView
        android:id="@+id/longitude_label"
        style="@style/AppTheme.SearchLabel"
        android:layout_below="@id/latitude_label"
        android:text="Longitude" />
    <TextView
        android:id="@+id/from_date_label"
        style="@style/AppTheme.SearchLabel"
        android:layout_below="@id/longitude_label"
        android:text="From Date" />
    <TextView
        android:id="@+id/to_date_label"
        style="@style/AppTheme.SearchLabel"
        android:layout_below="@id/from_date_label"
        android:text="To Date" />
    <TextView
        android:id="@+id/categories_label"
        style="@style/AppTheme.SearchLabel"
        android:layout_below="@id/to_date_label"
        android:text="Categories" />

    <EditText
        android:id="@+id/address"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/address_label"
        android:layout_toRightOf="@id/address_label"
            android:text="San Francisco, CA" />
    <EditText
        android:id="@+id/latitude"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/latitude_label"
        android:layout_toRightOf="@id/latitude_label" />
    <EditText
        android:id="@+id/longitude"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/longitude_label"
        android:layout_toRightOf="@id/longitude_label" />
    <EditText
        android:id="@+id/from_date"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/from_date_label"
        android:layout_toRightOf="@id/from_date_label"
        android:text="2013-08-24" />
    <EditText
        android:id="@+id/to_date"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/to_date_label"
        android:layout_toRightOf="@id/to_date_label"
        android:text="2013-08-25" />
    <EditText
        android:id="@+id/categories"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/categories_label"
        android:layout_toRightOf="@id/categories_label"
        android:text="" />

    <Button
        android:id="@+id/search_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/search_label" />
</RelativeLayout>